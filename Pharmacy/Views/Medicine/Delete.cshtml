@model Pharmacy.Models.Medicine

<div>
    <div class="thumbnail col-md-offset-3 col-md-6">
        <h2>Are you sure to delete this prescription?</h2>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Manufacturer</th>
                        <th>Amount</th>
                        <th>With prescription?</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Name</td>
                        <td>@Model.Manufacturer</td>
                        <td>@Model.Amount</td>
                        <td>@Model.WithPrescription</td>
                        <td>@Model.Price.ToString("C")</td>
                    </tr>
                </tbody>
            </table>
            <h4 class="pull-right">
                <form asp-action="Delete" asp-route-medicineId="@Model.Id">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </form>
            </h4>
        </div>
    </div>
</div>
